<h1>Listing photos</h1>

<table>
  <tr>
   
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td>
      <%= image_tag photo.image_url.to_s , size: "100x100"%>
    </td>
    <td>
      <%= link_to 'Show', [photo.hotel, photo], class: "btn btn-primary" %>
    </td>
      <% if current_user.hotels.include?(@hotel)%>
    <td>
      <%= link_to 'Edit', edit_hotel_photo_path(photo.hotel, photo), class: "btn btn-success" %>
    </td>
    <td>
      <%= link_to 'Destroy', [photo.hotel, photo], :confirm => 'Are you sure?', :method => :delete ,class: "btn btn-danger"%>
    </td>
  </tr>
      <%end%>
<% end %>
</table>

<br />

<%= link_to 'New Photo', new_hotel_photo_path(params[:hotel_id]), class:"btn btn-primary" %>
<br />
<br />
<%= link_to "Back", hotel_path(@hotel), class: "btn btn-primary"%>