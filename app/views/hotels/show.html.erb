
<h2 align="center">
  <%= @hotel.title %>
</h2>

<div align="center">
 <%= rating_for @hotel, "mark", class:"rating" %>
</div>

<%= link_to "Photos", hotel_photos_path(@hotel), class: "btn btn-primary"%>
<p id="notice"><%= notice %></p>


<p>
  <b>Room description:</b><br />
  <%= @hotel.room_description %>
</p>
    <button type="button" class="btn btn-danger" data-toggle="collapse" data-target="#demo">
    Details
    </button>
     
    <div id="demo" class="collapse out">
      <br />
<div id="details">
<br />
<p>
  <b>Breakfast:</b>
  <%= @hotel.breakfast %>
</p>

<p>
  <b>Price for room:</b>
  <%= @hotel.price %>
</p>


  <h4>Address</h4>
<p>
  <b>Country:</b>
  <%= @hotel.country %>
</p>

<p>
  <b>State:</b>
  <%= @hotel.state %>
</p>

<p>
  <b>City:</b>
  <%= @hotel.city %>
</p>

<p>
  <b>Street:</b>
  <%= @hotel.street %>
</p>
<br />
</div>
    </div>

<%= form_for([@hotel, Coment.new]) do |f| %>
  

  <div class="field">
    <%= f.label :Coment %>
    <%= f.text_area :mark, :rows => 7, :class => "span7"%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<table class="table table-striped table-hover">
  <tr>
    <th>Author</th>
    <th>Mark</th>

  </tr>

<% @coments.each do |coment| %>
  <tr>
    <td>
      <%= link_to "#{coment.user.name}", user_hotels_path(coment.user), class: "btn btn-primary"%>
    </td>
    
    <td><%= coment.mark %></td>
    
    
  </tr>
<% end %>
</table>

<div id="pagination">
  <%= will_paginate @coments %>
</div>


